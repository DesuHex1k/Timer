---
import TimerNav from '../components/TimerNav.jsx';
import { timers } from '../data/timers.js';
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/src/styles/tailwind.css" />
</head>
<body class="bg-gray-800 min-h-screen flex flex-col">
<header class="text-white p-8 flex flex-col gap-4 text-center">
    <a href="/" class="font-bold text-xl">‚è± Countdown Timers</a>
    <TimerNav timers={timers} client:load />
</header>

<main class="flex-grow container mx-auto p-4">
    <slot />
</main>

<footer class=" text-center text-white py-4 mt-auto">
    &copy; {new Date().getFullYear()} Nahapetyan Olexander
</footer>
</body>
</html>
